    <queries>
        <item>
            CREATE TABLE IF NOT EXISTS `cscart_players` (
            `player_id` mediumint(8) unsigned NOT NULL AUTO_INCREMENT,
            `player` varchar(128) NOT NULL,
            `status` char(1) NOT NULL DEFAULT 'A',
            `ranking` smallint(5) unsigned NOT NULL,
            `gender` char(1) NOT NULL DEFAULT 'M',
            `birthday` int(11) NOT NULL,
            `birthplace` varchar(128) NOT NULL,
            `residence` varchar(128) NOT NULL,
            `height` smallint(5) NOT NULL,
            `weight` smallint(5) NOT NULL,
            `plays` char(1) NOT NULL DEFAULT 'R',
            `turned_pro` smallint(5) NOT NULL,
            `coach` varchar(128) NOT NULL,
            `titles` smallint(5) unsigned NOT NULL,
            `rss_link` varchar(255) NOT NULL,
            PRIMARY KEY (`player_id`)
            ) DEFAULT CHARSET=utf8 ;
        </item>
        <item>
            CREATE TABLE IF NOT EXISTS `cscart_players_gear` (
                `gear_id` mediumint(8) unsigned NOT NULL AUTO_INCREMENT,
                `player_id` mediumint(8) unsigned NOT NULL,
                `product_id` mediumint(8) unsigned NOT NULL,
                PRIMARY KEY (`gear_id`)
            ) ;
        </item>
        <item>
            ALTER TABLE `cscart_product_filters` ADD `is_slider` CHAR( 1 ) NOT NULL DEFAULT 'N';
        </item>
        <item>
            ALTER TABLE `cscart_product_filters` ADD `units` VARCHAR( 32 ) NOT NULL ;
        </item>
        <item>
            ALTER TABLE `cscart_products` ADD `net_cost` DECIMAL( 12, 2 ) UNSIGNED NOT NULL ;
        </item>
        <item>
            ALTER TABLE `cscart_products` CHANGE `return_period` `return_period` INT( 11 ) UNSIGNED NOT NULL DEFAULT '30';
        </item>
        <item>
            ALTER TABLE `cscart_product_subscriptions` ADD `combination_hash` INT( 11 ) UNSIGNED NOT NULL ;
        </item>
        <item>
            DROP TABLE IF EXISTS `cscart_product_subscriptions`;
        </item>
        <item>
            CREATE TABLE `cscart_product_subscriptions` (
            `subscription_id` mediumint(8) unsigned NOT NULL AUTO_INCREMENT,
            `product_id` mediumint(8) unsigned NOT NULL DEFAULT '0',
            `combination_hash` INT( 11 ) UNSIGNED NOT NULL,
            `user_id` mediumint(8) unsigned NOT NULL DEFAULT '0',
            `email` varchar(128) NOT NULL DEFAULT '',
            PRIMARY KEY (`subscription_id`),
            UNIQUE KEY `pe` (`product_id`,`email`,`combination_hash`),
            KEY `pd` (`product_id`,`user_id`,`email`,`combination_hash`)
            ) ENGINE=MyISAM DEFAULT CHARSET=utf8;
        </item>
        <item>
            ALTER TABLE `cscart_discussion_messages` ADD `city` VARCHAR( 128 ) NOT NULL ,
            ADD `age` VARCHAR( 32 ) NOT NULL ,
            ADD `play_level` SMALLINT( 5 ) UNSIGNED NOT NULL ,
            ADD `surface` SMALLINT( 5 ) NOT NULL ,
            ADD `configuration` VARCHAR( 256 ) NOT NULL ;
        </item>
        <item>
            ALTER TABLE `cscart_players` ADD `feature_variant_id` MEDIUMINT( 8 ) UNSIGNED NOT NULL ;
        </item>
        <item>
            ALTER TABLE `cscart_products` ADD `net_currency_code` VARCHAR( 10 ) NOT NULL DEFAULT 'USD';
        </item>
        <item>
            ALTER TABLE `cscart_products` ADD `margin` DECIMAL( 4, 1 ) UNSIGNED NOT NULL ;
        </item>
        <item>
            ALTER TABLE `cscart_products` ADD `auto_price` CHAR( 1 ) NOT NULL DEFAULT 'Y';
        </item>
        <item>
            ALTER TABLE `cscart_categories` ADD `override_margin` CHAR( 1 ) NOT NULL DEFAULT 'N',
            ADD `margin` DECIMAL( 4, 1 ) UNSIGNED NOT NULL ;
        </item>
    </queries>
